{
  "name": "recode",
  "displayName": "%displayName%",
  "description": "%description%",
  "version": "0.1.4",
  "publisher": "aiyuekuang",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/aiyuekuang/ReCode"
  },
  "bugs": {
    "url": "https://github.com/aiyuekuang/ReCode/issues"
  },
  "homepage": "https://github.com/aiyuekuang/ReCode#readme",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "keywords": [
    "history",
    "rollback",
    "undo",
    "AI",
    "code changes",
    "version control",
    "backup"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "commands": [
      {
        "command": "recode.showHistory",
        "title": "%command.showHistory%",
        "icon": "$(history)"
      },
      {
        "command": "recode.enable",
        "title": "%command.enable%"
      },
      {
        "command": "recode.disable",
        "title": "%command.disable%"
      },
      {
        "command": "recode.clearHistory",
        "title": "%command.clearHistory%",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "recode-sidebar",
          "title": "%viewsContainer.title%",
          "icon": "$(database)"
        }
      ]
    },
    "views": {
      "recode-sidebar": [
        {
          "type": "webview",
          "id": "recode.historyView",
          "name": "%view.historyView.name%"
        }
      ]
    },
    "configuration": {
      "title": "%config.title%",
      "properties": {
        "recode.enabled": {
          "type": "boolean",
          "default": true,
          "description": "%config.enabled.description%"
        },
        "recode.debounceDelay": {
          "type": "number",
          "default": 2000,
          "minimum": 100,
          "maximum": 30000,
          "description": "%config.debounceDelay.description%"
        },
        "recode.maxHistorySize": {
          "type": "number",
          "default": 1000,
          "minimum": 10,
          "maximum": 100000,
          "description": "%config.maxHistorySize.description%"
        },
        "recode.retentionDays": {
          "type": "number",
          "default": 15,
          "minimum": 1,
          "maximum": 365,
          "description": "%config.retentionDays.description%"
        },
        "recode.protectedFiles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "%config.protectedFiles.description%"
        },
        "recode.protectedFileAction": {
          "type": "string",
          "enum": [
            "none",
            "notify",
            "confirm"
          ],
          "default": "notify",
          "enumDescriptions": [
            "%config.protectedFileAction.none%",
            "%config.protectedFileAction.notify%",
            "%config.protectedFileAction.confirm%"
          ],
          "description": "%config.protectedFileAction.description%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.44",
    "sql.js": "^1.10.3"
  }
}
