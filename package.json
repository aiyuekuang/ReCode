{
  "name": "recode",
  "displayName": "ReCode - AI Code History Guard",
  "description": "Track and rollback AI code changes automatically. Perfect for AI-assisted coding scenarios.",
  "version": "0.1.0",
  "publisher": "YOUR_PUBLISHER_ID",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/recode-vscode"
  },
  "bugs": {
    "url": "https://github.com/YOUR_USERNAME/recode-vscode/issues"
  },
  "homepage": "https://github.com/YOUR_USERNAME/recode-vscode#readme",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "keywords": [
    "history",
    "rollback",
    "undo",
    "AI",
    "code changes",
    "version control",
    "backup"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "recode.showHistory",
        "title": "ReCode: Show History",
        "icon": "$(history)"
      },
      {
        "command": "recode.enable",
        "title": "ReCode: Enable Tracking"
      },
      {
        "command": "recode.disable",
        "title": "ReCode: Disable Tracking"
      },
      {
        "command": "recode.clearHistory",
        "title": "ReCode: Clear History",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "recode-sidebar",
          "title": "ReCode",
          "icon": "$(database)"
        }
      ]
    },
    "views": {
      "recode-sidebar": [
        {
          "type": "webview",
          "id": "recode.historyView",
          "name": "Change History"
        }
      ]
    },
    "configuration": {
      "title": "ReCode",
      "properties": {
        "recode.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic change tracking"
        },
        "recode.debounceDelay": {
          "type": "number",
          "default": 2000,
          "description": "Debounce delay in milliseconds"
        },
        "recode.maxHistorySize": {
          "type": "number",
          "default": 1000,
          "description": "Maximum number of changes to keep"
        },
        "recode.retentionDays": {
          "type": "number",
          "default": 15,
          "minimum": 1,
          "maximum": 365,
          "description": "Number of days to retain change history (1-365)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.44",
    "sql.js": "^1.10.3"
  }
}
